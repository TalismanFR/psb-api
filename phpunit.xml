<phpunit>
    <php>
<!--        <env name="login" value=""/>-->
<!--        <env name="password" value=""/>-->
        <!--        <env name="url" value="https://api.dev.rko.psb.finstar.online/"/>-->
        <env name="url" value="https://api.lk.psbank.ru/fo/v1.0.0/"/>
        <env name="cityId" value="119"/>
    </php>
    <groups>
        <exclude>
            <group>sd</group>
        </exclude>
    </groups>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src</directory>
            <exclude>
                <directory>src/shared</directory>
            </exclude>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="tests/_output/report" lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="tests/_output/coverage.xml"/>
        <log type="coverage-php" target="tests/_output/coverage.serialized"/>
        <log type="coverage-text" target="php://stdout" showUncoveredFiles="false"/>
        <log type="junit" target="tests/_output/logfile.xml"/>
        <log type="testdox-html" target="tests/_output/testdox.html"/>
        <log type="testdox-text" target="tests/_output/testdox.txt"/>
    </logging>
</phpunit>